<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Консольный аппендер -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%highlight(%d{HH:mm:ss.SSS} [%-5level] %logger{15} - %msg%n%ex{full})</pattern>
        </encoder>
        <immediateFlush>false</immediateFlush>
    </appender>

    <!-- Файловый аппендер с ограничением размера и количества файлов -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>
            ./logs/${MODULE_NAME:-MODULE_ONE}/${DATE_NOW:-1970-01-01}/${LOG_FILE_NAME:-gatling}/${LOG_FILE_NAME:-gatling}_${DATE_TIME_NOW:-1970-01-01_00-00-00}.log
        </file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>
                ./logs/${MODULE_NAME:-MODULE_ONE}/${DATE_NOW:-1970-01-01}/${LOG_FILE_NAME:-gatling}/${LOG_FILE_NAME:-gatling}_${DATE_TIME_NOW:-1970-01-01_00-00-00}_#%i.log.zip
            </fileNamePattern>
            <minIndex>2</minIndex>
            <maxIndex>3</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ru.gatling.logger.LimitedFileSizeAppender">
            <maxFileSize>1MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%highlight(%d{HH:mm:ss.SSS} [%-5level] %logger{15} - %msg%n%ex{full})</pattern>
        </encoder>
    </appender>

    <root level="${LEVEL_CONSOLE_LOG:-INFO}">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger level="${LEVEL_FILE_LOG:-WARN}" name="io.gatling">
        <appender-ref ref="FILE"/>
    </logger>

    <logger level="${LEVEL_FILE_LOG:-INFO}" name="ru.gatling">
        <appender-ref ref="FILE"/>
    </logger>
</configuration>
